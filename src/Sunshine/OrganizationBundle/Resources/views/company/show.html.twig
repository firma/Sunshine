{% extends "@SunshineOrganization/company/company.html.twig" %}

{% block main_content %}
    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ company.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ company.name }}</td>
            </tr>
            <tr>
                <th>Foreignname</th>
                <td>{{ company.foreignName }}</td>
            </tr>
            <tr>
                <th>Alias</th>
                <td>{{ company.alias }}</td>
            </tr>
            <tr>
                <th>Legalperson</th>
                <td>{{ company.legalPerson }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ company.address }}</td>
            </tr>
            <tr>
                <th>Zipcode</th>
                <td>{{ company.zipCode }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ company.phone }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ company.fax }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ company.website }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ company.mail }}</td>
            </tr>
            <tr>
                <th>Officeaddress</th>
                <td>{{ company.officeAddress }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ company.description }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if company.createdAt %}{{ company.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if company.updatedAt %}{{ company.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_org_company_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_org_company_edit', { 'id': company.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
